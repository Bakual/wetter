<?xml version="1.0" encoding="UTF-8"?>
<extension type="module" version="4.0" client="site" method="upgrade">
	<name>MOD_DWD_WETTERMODUL</name>
	<author>Thomas Hunziker</author>
	<creationDate>2023-12-04</creationDate>
	<copyright>(C) 2023</copyright>
	<authorEmail>admin@bakual.net</authorEmail>
	<authorUrl>http://www.bakual.net</authorUrl>
	<version>6.0.1</version>
	<license>http://www.gnu.org/licenses/gpl.html</license>
	<description>MOD_DWD_WETTERMODUL_XML_DESCRIPTION</description>
	<files>
		<filename module="mod_dwd_wettermodul">mod_dwd_wettermodul.php</filename>
		<filename>helper.php</filename>
		<folder>language</folder>
		<folder>icons</folder>
		<folder>sql</folder>
		<folder>tmpl</folder>
	</files>
	<scriptfile>script.php</scriptfile>
	<install>
		<sql>
			<file driver="mysql" charset="utf8">sql/mysql/install.mysql.utf8.sql</file>
		</sql>
	</install>

	<uninstall>
		<sql>
			<file driver="mysql" charset="utf8">sql/mysql/uninstall.mysql.utf8.sql</file>
		</sql>
	</uninstall>

	<update>
		<schemas>
			<schemapath type="mysql">sql/mysql/updates</schemapath>
		</schemas>
	</update>
	<updateservers>
		<server type="extension" name="DWD Wettermodul">
			https://raw.githubusercontent.com/Bakual/wetter/master/manifest.xml
		</server>
	</updateservers>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field
					name="titel"
					type="text"
					label="MOD_DWD_WETTERMODUL_FIELD_TITEL_LABEL"
				/>
				<field
					name="station"
					type="sql"
					label="MOD_DWD_WETTERMODUL_FIELD_STATION_LABEL"
					sql_select="id, title"
					sql_from="#__dwd_wetter_sites"
					sql_order="title ASC"
					key_field="id"
					value_field="title"
				/>
				<field
					name="farbe"
					type="color"
					label="MOD_DWD_WETTERMODUL_FIELD_FARBE_LABEL"
					default="#6699cc"
				/>
				<field
					name="zweitfarbe"
					type="color"
					label="MOD_DWD_WETTERMODUL_FIELD_ZWEITFARBE_LABEL"
					default="#999999"
				/>
				<field
					name="datumtitel"
					type="radio"
					label="MOD_DWD_WETTERMODUL_FIELD_DATUMTITEL_LABEL"
					layout="joomla.form.field.radio.switcher"
					default="1"
				>
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field
					name="tag0"
					type="radio"
					label="MOD_DWD_WETTERMODUL_FIELD_TAG0_LABEL"
					layout="joomla.form.field.radio.switcher"
					default="1"
				>
					<option value="0">JHIDE</option>
					<option value="1">JSHOW</option>
				</field>
				<field
					name="heutehohe"
					type="radio"
					label="MOD_DWD_WETTERMODUL_FIELD_HEUTEHOHE_LABEL"
					layout="joomla.form.field.radio.switcher"
					showon="tag0:1"
					default="0"
				>
					<option value="0">JHIDE</option>
					<option value="1">JSHOW</option>
				</field>
				<field
					name="heuteluft"
					type="radio"
					label="MOD_DWD_WETTERMODUL_FIELD_HEUTELUFT_LABEL"
					layout="joomla.form.field.radio.switcher"
					showon="tag0:1"
					default="1"
				>
					<option value="0">JHIDE</option>
					<option value="1">JSHOW</option>
				</field>

				<field
					name="heuteregen"
					type="radio"
					label="MOD_DWD_WETTERMODUL_FIELD_HEUTEREGEN_LABEL"
					layout="joomla.form.field.radio.switcher"
					showon="tag0:1"
					default="1"
				>
					<option value="0">JHIDE</option>
					<option value="1">JSHOW</option>
				</field>
				<field
					name="heutewindrichtung"
					type="radio"
					label="MOD_DWD_WETTERMODUL_FIELD_HEUTEWINDRICHTUNG_LABEL"
					layout="joomla.form.field.radio.switcher"
					showon="tag0:1"
					default="1"
				>
					<option value="0">JHIDE</option>
					<option value="1">JSHOW</option>
				</field>
				<field
					name="heutewind"
					type="radio"
					label="MOD_DWD_WETTERMODUL_FIELD_HEUTEWIND_LABEL"
					layout="joomla.form.field.radio.switcher"
					showon="tag0:1"
					default="1"
				>
					<option value="0">JHIDE</option>
					<option value="1">JSHOW</option>
				</field>
				<field
					name="heutewindspitze"
					type="radio"
					label="MOD_DWD_WETTERMODUL_FIELD_HEUTEWINDSPITZE_LABEL"
					layout="joomla.form.field.radio.switcher"
					showon="tag0:1"
					default="0"
				>
					<option value="0">JHIDE</option>
					<option value="1">JSHOW</option>
				</field>
				<field
					name="tag1"
					type="radio"
					label="MOD_DWD_WETTERMODUL_FIELD_TAG1_LABEL"
					layout="joomla.form.field.radio.switcher"
					default="0"
				>
					<option value="0">JHIDE</option>
					<option value="1">JSHOW</option>
				</field>
				<field
					name="tag2"
					type="radio"
					label="MOD_DWD_WETTERMODUL_FIELD_TAG2_LABEL"
					layout="joomla.form.field.radio.switcher"
					default="0"
				>
					<option value="0">JHIDE</option>
					<option value="1">JSHOW</option>
				</field>
				<field
					name="tag3"
					type="radio"
					label="MOD_DWD_WETTERMODUL_FIELD_TAG3_LABEL"
					layout="joomla.form.field.radio.switcher"
					default="0"
				>
					<option value="0">JHIDE</option>
					<option value="1">JSHOW</option>
				</field>
			</fieldset>
			<fieldset name="advanced">
				<field
					name="layout"
					type="modulelayout"
					label="JFIELD_ALT_LAYOUT_LABEL"
					class="form-select"
					validate="moduleLayout"
					default="_:vertikal"
				/>
				<field
					name="moduleclass_sfx"
					type="textarea"
					label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
					rows="3"
					validate="CssIdentifier"
				/>

				<field
					name="cache"
					type="list"
					label="COM_MODULES_FIELD_CACHING_LABEL"
					default="1"
					filter="integer"
					validate="options"
				>
					<option value="1">JGLOBAL_USE_GLOBAL</option>
					<option value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
				</field>

				<field
					name="cache_time"
					type="number"
					label="COM_MODULES_FIELD_CACHE_TIME_LABEL"
					default="900"
					filter="integer"
				/>

				<field
					name="cachemode"
					type="hidden"
					default="static"
				>
					<option value="static"></option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
