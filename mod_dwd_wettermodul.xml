<?xml version="1.0" encoding="UTF-8"?>
<extension type="module" version="3.8" method="upgrade">
    <name>DWD Wettermodul</name>
    <author>T. Hunziker/ M. Bollmann</author>
    <creationDate>2017-11-16</creationDate>
    <copyright>(C) 2017</copyright>
    <authorEmail>admin@bakual.net</authorEmail>
    <authorUrl>http://www.bakual.net</authorUrl>
    <version>5.0.0-alpha1</version>
    <license>http://www.gnu.org/licenses/gpl.html</license>
    <description>MOD_DWD_WETTERMODUL_XML_DESCRIPTION</description>
    <files>
        <filename module="mod_dwd_wettermodul">mod_dwd_wettermodul.php</filename>
        <filename>helper.php</filename>
        <folder>language</folder>
        <folder>icons</folder>
        <folder>sql</folder>
        <folder>tmpl</folder>
    </files>
    <languages>
        <language tag="en-GB">language/en-GB/en-GB.mod_dwd_wettermodul.ini</language>
        <language tag="de-DE">language/de-DE/de-DE.mod_dwd_wettermodul.ini</language>
    </languages>
    <install>
        <sql>
            <file driver="mysql" charset="utf8">sql/mysql/install.mysql.utf8.sql</file>
        </sql>
    </install>

    <uninstall>
        <sql>
            <file driver="mysql" charset="utf8">sql/mysql/uninstall.mysql.utf8.sql</file>
        </sql>
    </uninstall>

    <update>
        <schemas>
            <schemapath type="mysql">sql/mysql/updates</schemapath>
        </schemas>
    </update>
    <updateservers>
        <server type="extension" name="DWD Wettermodul">https://raw.githubusercontent.com/Bakual/wetter/master/manifest.xml</server>
    </updateservers>
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field
                        name="titel"
                        type="text"
                        label="Überschrift"
                        description="Geben Sie optional eine angezeigte Überschrift an."
                />
                <field
                        name="station"
                        type="sql"
                        label="Vorhersage/DWD Region"
                        description="Wählen Sie den nächstgelegenen Ort als Datenbasis. Anhang dieser Wahl wird die Vorhersage erstellt."
                        sql_select="id, title"
                        sql_from="#__dwd_wetter_sites"
                        sql_order="title ASC"
                        key_field="id"
                        value_field="title"
                />
            </fieldset>
            <fieldset name="weiteres" label="Weitere Einstellungen">
                <field
                        name="farbe"
                        type="color"
                        label="Hauptfarbe"
                        description="Geben Sie einen Farbcode für die Temperatur etc. an."
                        default="#6699cc"
                />
                <field
                        name="zweitfarbe"
                        type="color"
                        label="Textfarbe"
                        description="Geben Sie einen Farbcode für die Tage an."
                        default="#999999"
                />
                <field
                        name="datumtitel"
                        type="radio"
                        label="Tagesbezeichnung anzeigen?"
                        description="Soll der Tag (Aktuell, Morgen, 12.03. etc.) als Text angezeigt werden?"
                        class="btn-group btn-group-yesno"
                        default="1"
                >
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field
                        name="tag0"
                        type="radio"
                        label="Aktuelle Wetterdaten anzeigen?"
                        description="Sollen die aktuellen Wetterdaten angezeigt werden?"
                        class="btn-group btn-group-yesno"
                        default="1"
                >
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field
                        name="heutehohe"
                        type="radio"
                        label="Höhe(m) über Normalnull anzeigen?"
                        class="btn-group btn-group-yesno"
                        default="0"
                >
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field
                        name="heuteluft"
                        type="radio"
                        label="Luftdruck(hPa) anzeigen?"
                        class="btn-group btn-group-yesno"
                        default="1"
                >
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>

                <field
                        name="heuteregen"
                        type="radio"
                        label="Niederschlag(mm/h) anzeigen?"
                        class="btn-group btn-group-yesno"
                        default="1"
                >
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field
                        name="heutewindrichtung"
                        type="radio"
                        label="Windrichtung anzeigen?"
                        class="btn-group btn-group-yesno"
                        default="1"
                >
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field
                        name="heutewind"
                        type="radio"
                        label="Windgeschwindigkeit(km/h) anzeigen?"
                        class="btn-group btn-group-yesno"
                        default="1"
                >
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field
                        name="heutewindspitze"
                        type="radio"
                        label="Windspitze(km/h) anzeigen?"
                        class="btn-group btn-group-yesno"
                        default="0"
                >
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field
                        name="tag1"
                        type="radio"
                        label="Wettervorhersage für Morgen?"
                        class="btn-group btn-group-yesno"
                        default="0"
                >
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field
                        name="tag2"
                        type="radio"
                        label="Wettervorhersage für Übermorgen?"
                        class="btn-group btn-group-yesno"
                        default="0"
                >
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field
                        name="tag3"
                        type="radio"
                        label="Wettervorhersage für 3 Tage?"
                        class="btn-group btn-group-yesno"
                        default="0"
                >
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
            </fieldset>
            <fieldset name="advanced">
                <field name="layout" type="modulelayout"
                       label="JFIELD_ALT_LAYOUT_LABEL"
                       description="JFIELD_ALT_MODULE_LAYOUT_DESC"
                       default="_:vertikal"/>
                <field name="moduleclass_sfx" type="textarea"
                       label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
                       description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC"
                       rows="3"/>
                <field name="cache" type="list"
                       label="COM_MODULES_FIELD_CACHING_LABEL"
                       description="COM_MODULES_FIELD_CACHING_DESC"
                       default="1">
                    <option value="1">JGLOBAL_USE_GLOBAL</option>
                    <option value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
                </field>
                <field name="cache_time" type="text"
                       label="COM_MODULES_FIELD_CACHE_TIME_LABEL"
                       description="COM_MODULES_FIELD_CACHE_TIME_DESC"
                       default="900"/>
                <field name="cachemode" type="hidden"
                       default="static">
                    <option value="static"></option>
                </field>
            </fieldset>
        </fields>
    </config>
</extension>